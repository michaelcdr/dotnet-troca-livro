@model List<TrocaLivro.Aplicacao.CasosDeUsos.TrocaSolicitadaViewModel>

<div id="trocas-solicitadas-pelo-usuario-logado">
    <h4><i class="fa fa-refresh"></i> Veja os livros que seu usuário solicitou.</h4>
    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            Ainda não existem solicitações de trocas para seu usuário.
        </div>
    }
    else
    {
        <div class="row d-flex">
        @foreach (var livroTroca in Model)
        {
            <div class="flex-fill col-md-4 mb-3">
                <partial name="_CardTroca" model="livroTroca" />
            </div>
        }
        </div>
    }
</div>