<!doctype html>
<html lang="en">
<head>
    <title>Book exchange - Sua plataforma para troca de livros</title>

    <!-- Meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap"
          rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/lib/sweetAlert2/sweetalert2.min.css">
</head>
<body>
    <!-- cabeçalho e navegação -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <span class="logo-strong">B</span>ook<span class="logo-strong">E</span>xchange
                </a>
            </div>
        </nav>
        <div class="spacer-header"></div>
    </header>
    <main>
        <div class="container-login">
            @RenderBody()
        </div>
    </main>
    <footer class="mt-3 text-light"></footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/sweetAlert2/sweetalert2.min.js"></script>
    <script src="~/js/sweet-alert-helper.js"></script>
    <script src="~/js/bs4-extensions.js"></script>
    <script src="~/js/usuario/LoginUsuario.js" asp-append-version="true"></script>
    <script>
        let loginUsuario = null;
        $(function () {
            loginUsuario = new LoginUsuario();
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
