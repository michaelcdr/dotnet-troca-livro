<div class="container-nav">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <nav class="navbar navbar-expand-sm col-xs-6 col-sm-3 col-md-3 col-lg-2 navbar-logo">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-menu"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="fa fa-bars" style="color: white"></span>
                        </button>
                         <a class="navbar-brand" href="/">
                            <img src="~/img/bool-exchange-icon-negative.svg" id="logo"/>
                         </a>
                    </nav>
                    <div id="pesquisa-container" class="col-xs-12 col-sm-6 col-md-6 col-lg-8">
                        <form id="form-pesquisa" asp-controller="livro" asp-action="pesquisa" method="GET">
                            <div class="row">
                                <div class="col-md-12 mt-lg-3">
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="termoPesquisa" name="termoPesquisa" placeholder="Pesquise um livro aqui..." 
                                            aria-label="Pesquise um livro aqui..." aria-describedby="button-addon2">
                                        <div class="input-group-append">
                                            <button class="btn btn-outline-light" type="submit" id="button-addon2">
                                                <i class="fa fa-search text-dark"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div> 
                            </div>
                        </form>
                    </div>
                    <div id="info-autenticacao" class="col-xs-6 col-sm-3 col-md-3 col-lg-2">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span class="login-nav text-light text-right">
                                <i class="fa fa-user"></i> Olá,
                                <a asp-action="MinhaConta" asp-controller="Usuario" class="a-primary">@User.Identity.Name</a> clique em
                                <a asp-action="Sair" asp-controller="Usuario" class="a-primary" title="Sair no sistema" data-container="body" 
                                    data-toggle="tooltip" data-placement="body">Sair</a> para fazer seu logout.
                            </span>
                            <vc:pontos></vc:pontos>                            
                        }
                        else 
                        { 
                            <span class="login-nav text-light text-right">
                                <i class="fa fa-user"></i> Olá , Faça seu
                                <a asp-action="Login" asp-controller="Usuario" class="a-primary" data-container="body" 
                                    title="Entrar no sistema" data-toggle="tooltip" data-placement="body">Login</a>
                                <br /> ou
                                <a asp-action="Registrar" asp-controller="Usuario" class="a-primary" title="Entrar no sistema" data-container="body">
                                    Cadastre-se
                                </a>.
                            </span>
                            <vc:pontos></vc:pontos>
                        }
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>
<div class="container-menu ">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <nav class="row navbar navbar-expand-sm navbar-light mainmenu">
                    <div class="collapse navbar-collapse" id="navbar-menu">
                        <vc:categorias></vc:categorias>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>