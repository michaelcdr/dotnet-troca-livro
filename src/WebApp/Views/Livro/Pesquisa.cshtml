@model List<LivroCardModel>

@{
    ViewData["Title"] = "Pesquisa";
}

<h3 class="text-center">
    <strong>@Model.Count</strong> livros encontrados para <strong>@ViewBag.TermoPesquisa</strong>
</h3>

<div class="row d-flex">
    @foreach (var livro in Model)
    {
        <div class="flex-fill col-lg-3 col-md-6 col-sm-6 col-xs-12 mb-3">
            <partial name="_Card" model="livro" />
        </div>  
    }
</div>
 

@section Scripts{
    <script src="~/js/livro/pesquisa.js"></script>
}