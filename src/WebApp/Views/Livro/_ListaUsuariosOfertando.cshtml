@model LivroDetalhes
    
@if (Model.Usuarios.Count > 0)
{
    <div class="row">
        <div class="col-md-12">
            <h3 class="mt-3"> Esse livro está sendo oferecido por:</h3>

            <table class="table table-striped table-borderless" width="100%">
                @foreach (var item in Model.Usuarios)
                {
                    <tr>
                        <td class="text-center" width="10px" valign="middle">
                            <img src="~/img/usuario/2.png" width="50" />
                        </td>
                        <td class="text-center" width="30%" valign="middle">
                            <strong>@item.Nome</strong> está oferecendo esse livro por <strong>@item.Pontos</strong> pontos.
                        </td>
                        <td class="text-center" width="" valign="middle">
                            <strong>@item.Nome</strong> já enviou 
                            <strong>@item.LivrosEnviados</strong> livros
                        </td>
                        <td class="text-right" valign="middle">
                            <button type="button" class="btn btn-outline-dark">Solicitar troca</button>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
}